					<div class="detailFlim__left d-flex justify-content-center">
						<div class="detailFlim__avatar ">
							
							<img src="<%= movie.images[0].publicUrl %>" alt="<%= movie.name%>" class="detailFlim__avatar-img" />
						</div>
						<!-- <div class="detailFlim">
                        <a href="#" type="button" class="btn btn-outline-secondary">Secondary</a>
                    </div> -->
