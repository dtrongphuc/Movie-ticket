<%- include('../layouts/header', {title: 'Phim' }); -%>
	<%- include('../layouts/navbar/navbar') -%>
		<div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff; height: 400px; background: black;"
			class="swiper-container mySwiper">
			<div class="swiper-wrapper">

				<% movie.images.forEach(function(img) { %>
					<div class="swiper-slide" style="opacity: 1;">
						<!-- Required swiper-lazy class and image source specified in data-src attribute -->
						<img src="<%= img.publicUrl %>" class="swiper-lazy" />
						<!-- Preloader image -->
						<div class="swiper-lazy-preloader swiper-lazy-preloader-white"></div>
					</div>
					<% }); %>

			</div>
			<div class="swiper-button-next"></div>
			<div class="swiper-button-prev"></div>
			<div class="swiper-pagination"></div>
		</div>

