<%- include('../layouts/header', {title: 'Đặt lại mật khẩu'}); -%> <%-
include('../layouts/navbar/navbar') -%>
<main>
	<div class="auth__wrapper">
		<div class="container-md">
			<h3 class="auth__title auth__title--center">Đặt lại mật khẩu</h3>
			<div class="auth__form__wrapper center__form__wrapper">
				<form action="/auth/reset-pwd" method="POST" class="auth__form">
					<% if(message) { %>
					<div class="alert alert-<%- message?.type %>">
						<%- message?.content %>
					</div>
					<% } %>
					<div class="form-group">
						<label class="form-label" for="password">Mật khẩu mới</label>
						<input
							type="password"
							name="password"
							id="password"
							class="form-input"
						/>
					</div>
					<div class="form-group">
						<label class="form-label" for="confirmPassword"
							>Nhập lại mật khẩu</label
						>
						<input
							type="password"
							name="confirmPassword"
							id="confirmPassword"
							class="form-input"
						/>
					</div>
					<button type="submit" class="register__form__submit">Gửi</button>
				</form>
			</div>
		</div>
	</div>
</main>
<%- include('../layouts/footer') -%>
